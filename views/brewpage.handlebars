<div class="row">
    <div class="col-md-12">
        {{!-- Show the beer we clicked on as one big card --}}
        <div class="card mb-5 pb-3 roundedCorners cardShadow">
            <div class="card-body">
                <!-- try to get picture to sit to the left -->
                <!-- <img src="" alt=""> -->
                <div class="text-center">
                    <a href="/api/brew/{{brew.id}}"
                        class="card-title text-dark fs-1 text-decoration-none">{{brew.name}}</a>
                </div>
                <div class="text-white bg-dark">
                    <ul class="list-group list-group flush">
                        <li class="list-group-item fs-2 py-4">Brewery: <b>{{brew.breweryName}}</b> </li>
                        <li class="list-group-item fs-4 py-2"><b>Details:</b> {{brew.description}}</li>
                        <li class="list-group-item fs-3 py-3">Alc%: {{brew.alcContent}}</li>
                        <li class="list-group-item fs-3 py-3">Style: {{brew.style}}</li>
                    </ul>
                </div>
            </div>
        </div>
